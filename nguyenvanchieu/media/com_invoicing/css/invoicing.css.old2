body {
margin : 0;
}

.icon-48-invoicing {
    background: url("../images/logo.png") no-repeat scroll 0 0 transparent !important;
}

#invoice-container {
width : 900px;
margin-left : auto;
margin-right : auto;
}

#details {
float : left;
}

#contacts {
float : right;
width : 400px;
}

#products {
clear : both;
}

#discount {
clear : both;
}

#notes {
float : left;
width : 400px;
}

#total {
float : right;
width : 400px;
}

legend {
color : blue;
font-size : 1.1em;
}

ul {
list-style-type : none;
}

#sort td {
padding : 50 50;
}

#subtotal {
float : right;
}

.sendMailToClient {
display : none;
}

.PDFAttachment {
display : none;
}

/* Fixes for display */
.hideToAdjust {
visibility : hidden;
}

.logo_vendor {
max-width : 150px;
max-height : 150px;
}

/* Error display with validate.js */
label.error{
color : #B94A48;
}

input.required {
border-color: #B94A48;
}


/* Button to see the invoice in modal display */
#seeInvoiceLink {
font-weight:bold;
font-size : 15px;
display : block;
}

#mailInvoice {
font-weight:bold;
font-size : 15px;
display : block;
}

