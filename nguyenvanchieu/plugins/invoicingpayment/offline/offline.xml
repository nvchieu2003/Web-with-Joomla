<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="invoicingpayment" method="upgrade" client="site">
	<name>Invoicing Offline Payment Plugin</name>
	<creationDate>June 2015</creationDate>
	<version>3.2</version>
	<author>JoomPROD</author>
	<authorEmail>support@juloa.com</authorEmail>
	<authorUrl>http://www.joomprod.com</authorUrl>
	<copyright>Copyright (C) 2012 JoomPROD - All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to setup your offline payment system</description>
	<files>
		<filename plugin="offline">offline.php</filename>
		<filename>offline.xml</filename>
		<folder>offline</folder>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_invoicingpayment_offline.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_invoicingpayment_offline.sys.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.plg_invoicingpayment_offline.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.plg_invoicingpayment_offline.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="title" type="text" size="50" default="" label="PLG_INVOICINGPAYMENT_TITLE_LABEL" description="PLG_INVOICINGPAYMENT_TITLE_DESC"/>
				<field name="image" type="text" size="50" default="" label="PLG_INVOICINGPAYMENT_IMAGE_LABEL" description="PLG_INVOICINGPAYMENT_IMAGE_DESC" />
				<field type="spacer" />
				<field name="text" type="textarea" default="This text will be displayed after payment selected. You can use all invoicing tags" label="PLG_INVOICINGPAYMENT_OFFLINE_TEXT_LABEL" rows="50" cols="50"  filter="raw"/>
            </fieldset>
        </fields>
    </config>
</extension>