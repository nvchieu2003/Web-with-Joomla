<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
		       readonly="true" class="readonly"
		       description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="title" type="text" labelclass="col-sm-2 compojoom-control-label" class="form-control"
		       default="" label="LIB_COMPOJOOM_CUSTOM_FIELDS_TITLE_LABEL"
		       description="LIB_COMPOJOOM_CUSTOM_FIELDS_TITLE_DESC" required="true"/>
		<field name="component" type="hidden" default="com_comment"/>
		<field name="slug" type="text" labelclass="col-sm-2 compojoom-control-label" class="form-control"
		       default="" label="LIB_COMPOJOOM_CUSTOM_FIELDS_SLUG_LABEL"
		       description="LIB_COMPOJOOM_CUSTOM_FIELDS_SLUG_DESC"/>
		<field name="show" type="list" labelclass="col-sm-2 compojoom-control-label" class="form-control"
		       default="" label="LIB_COMPOJOOM_CUSTOM_FIELDS_SHOW_LABEL"
		       description="COM_COMMENT_CUSTOM_FIELDS_SHOW_DESC">
			<option value="all">COM_COMMENT_CUSTOM_FIELDS_ALL_COMPONENTS_LABEL</option>
			<option value="category">COM_COMMENT_CUSTOM_FIELDS_SPECIFIC_COMPONENTS_LABEL</option>
		</field>
		<field name="catid" type="ccommentplugins" ids="1" labelclass="col-sm-2 compojoom-control-label" class="form-control"
		       default="" label="COM_COMMENT_CUSTOM_FIELDS_COMPONENTS_LABEL"
		       multiple="true" description="COM_COMMENT_CUSTOM_FIELDS_COMPONENTS_DESC"/>
		<field name="type" type="list" labelclass="col-sm-2 compojoom-control-label" class="form-control"
		       default="" label="LIB_COMPOJOOM_CUSTOM_FIELDS_FIELD_TYPE_LABEL"
		       description="LIB_COMPOJOOM_CUSTOM_FIELDS_FIELD_TYPE_DESC">
			<option value="text">Text</option>
			<option value="list">Select list</option>
			<option value="url">Url</option>
			<option value="checkbox">Checkbox</option>
		</field>
		<field name="options" type="textarea" labelclass="col-sm-2 compojoom-control-label" class="form-control"
		       default="" label="LIB_COMPOJOOM_CUSTOM_FIELDS_OPTIONS_LABEL"
		       description="LIB_COMPOJOOM_CUSTOM_FIELDS_OPTIONS_DESC" filter="raw"/>
		<field name="default" type="text" labelclass="col-sm-2 compojoom-control-label" class="form-control"
		       default="" label="LIB_COMPOJOOM_CUSTOM_FIELDS_DEFAULT_LABEL"
		       description="LIB_COMPOJOOM_CUSTOM_FIELDS_DEFAULT_DESC"/>
		<field name="allow_empty" type="list" labelclass="col-sm-2 compojoom-control-label" class="form-control"
		       default="" label="LIB_COMPOJOOM_CUSTOM_FIELDS_ALLOW_EMPTY_LABEL"
		       description="LIB_COMPOJOOM_CUSTOM_FIELDS_ALLOW_EMPTY_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>

</form>
